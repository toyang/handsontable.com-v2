<section class="blog">
    <div class="row">
        <div class="large-12 large-centered columns">
            <h2>Blog</h2>
        </div>
    </div>

    <div class="row">
        <% var i = 0;
        %>
        <% for(var slug in public.blog.articles._data) { %>
            <div class="large-4 columns post-element left">
                <h3>
                    <a href="/blog/articles/<%= public.blog.articles._data[slug].directory %><%= slug %>"><%= public.blog.articles._data[slug].title %></a>
                </h3>
                <p><img src="/blog/attachments/images/<%= public.blog.articles._data[slug].image_file %>">
                <p>
                    <small>
                        <%= public.blog.articles._data[slug].category %> / <%= public.blog.articles._data[slug].date %>
                    </small>
                </p>
                <p><%= public.blog.articles._data[slug].description %></p>
                <p><a href="/blog/articles/<%= public.blog.articles._data[slug].directory %><%= slug %>">Read more</a></p>
            </div>
        <% i++; }; %>
    </div>
</section>